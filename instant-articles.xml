---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}</link>
    <description>
      {% if site.description %}{{ site.description | xml_escape }}{% endif %}
    </description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <language>es-co</language>
    {% for post in site.posts %}
        {% unless post.link %}
            <item>
                <title>{{ post.title | xml_escape }}</title>
                <link>{{ site.url }}{{ post.url }}</link>
                 <guid isPermaLink="false">{{ post.url }}</guid>
                <description>
                    {% if post.excerpt %}
                    {{ post.excerpt | xml_escape }}
                    {% endif %}
                </description>
                <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
                <author>{{ post.author.name }}</author>
                <content:encoded>
                    <![CDATA[
                        <!doctype html>
                        <html lang="en" prefix="op: http://media.facebook.com/op#">
                        <head>
                            <meta charset="utf-8">
                            <link rel="canonical" href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">
                            <meta property="op:markup_version" content="v1.0">
                            <meta property="fb:article_style" content="myarticlestyle">
                        </head>
                        <body>
                            <article>
                            <header>
                                <h1>{{ post.title | xml_escape }}</h1>
                                {% if post.image %}
                                <figure>
                                    <img src="{{ post.image }}" alt=" {{ post.title }} ">
                                    <figcaption>{{ post.title }}</figcaption>
                                </figure>
                                {% else %}
                                <figure>
                                    <img src="{{ site.baseurl | prepend: site.url }}/images/sitelogo_640x492.png" alt=" {{ post.title }} ">
                                    <figcaption>{{ post.title }}</figcaption>
                                </figure>
                                {% endif %}
                                <h3 class="op-kicker">
                                    This is a kicker
                                </h3>
                                <address>
                                    <a rel="facebook" href="{{ post.author.profile }}">{{ post.author.name }}</a>
                                    {{ post.author.description }}
                                </address>
                                <time class="op-published" dateTime="{{ post.date | date: "%Y-%m-%dT%H:%M:%S" }}">{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</time>
                                <time class="op-modified" dateTime="{{ post.modified | date: "%Y-%m-%dT%H:%M:%S" }}">{{ post.modified | date: "%a, %d %b %Y %H:%M:%S %z" }}</time>
                            </header>
                            {% if post.instantfeedback %}
                                {{ post.content | replace: '<figure>', '<figure data-feedback="fb:likes">' }}
                            {% else %}
                                {{ post.content }}
                            {% endif %}
                                <footer>
                                    <aside>
                                        {% if post.credit %}
                                        {{ post.credit }}.<br />
                                        {% endif %}
                                        Written by {{ post.author.name }} 
                                    </aside>
                            </footer>
                            </article>
                        </body>
                    </html>
                    ]]>
                </content:encoded>
            </item>
        {% endunless %}
    {% endfor %}
  </channel>
</rss>