---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}</link>
    <description>
      {% if site.description %}{{ site.description | xml_escape }}{% endif %}
    </description>
    <lastBuildDate>2014-12-11T04:44:16Z</lastBuildDate>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <language>es-co</language>
    {% for post in site.posts %}
        {% unless post.link %}
            <item>
                <title>{{ post.title | xml_escape }}</title>
                <link>{{ site.url }}{{ post.url }}</link>
                 <guid isPermaLink="false">{{ post.url }}</guid>
                <description>
                    {% if post.excerpt %}
                    {{ post.excerpt | xml_escape }}
                    {% endif %}
                </description>
                <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
                {% assign authorInfo = site.data.authors[post.author] %}  
                <author>{{ authorInfo.name }}</author>
                <content:encoded>
                    <![CDATA[
                        <!doctype html>
                        <html lang="en" prefix="op: http://media.facebook.com/op#">
                        <head>
                            <meta charset="utf-8">
                            <link rel="canonical" href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">
                            <meta property="op:markup_version" content="v1.0">
                        </head>
                        <body>
                            <article>
                                <figure class="op-tracker">
                                    <iframe>
                                        <script>
                                            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                                            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                                            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                                            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                                            ga('create','{{ site.google_analytics }}', 'auto');
                                            ga('set', 'referrer', 'ia.facebook.com');
                                            ga('set', 'dataSource', 'instantArticle');
                                            ga('set', 'campaignName', 'instant articles');
                                            ga('set', 'campaignSource', 'instant articles source');
                                            ga('set', 'campaignKeyword', 'rutas de los andes instant articles');
                                            ga('set', 'campaignMedium', 'instant article medium');
                                            ga('send', 'pageview');
                                        </script>
                                    </iframe>
                                </figure>
                            <header>
                                <h1>{{ post.title | xml_escape }}</h1>
                                {% if post.image %}
                                    <figure>
                                        <img src="{{ post.image |  prepend: site.url }}" alt=" {{ post.title }} ">
                                        <figcaption>{{ post.title }}</figcaption>
                                    </figure>                          
                                {% endif %}
                                <address>
                                    <a rel="facebook" href="{{ authorInfo.facebook }}">{{ authorInfo.name }}</a>
                                    {{ authorInfo.description }}
                                </address>
                                <time class="op-published" dateTime="{{ post.date | date: "%Y-%m-%dT%H:%M:%S" }}">{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</time>
                                <time class="op-modified" dateTime="{{  "now"  | date: "%Y-%m-%dT%H:%M:%S" }}">{{  "now"  | date: "%a, %d %b %Y %H:%M:%S %z" }}</time>
                            </header>
                                {{ post.content |
                                    replace: "<amp-img", "<img" | 
                                    replace: "</amp-img>", "</img>" |
                                    replace: "</img>", "" |
                                    replace: "amp-iframe", "iframe" |
                                    replace: "<amp-carousel", "<figure class='op-slideshow'" |
                                    replace: "/amp-carousel", "/figure" }}  
                                <footer>
                                   <ul class="op-related-articles">
                                    {% assign maxRelated = 4 %}
                                    {% assign minCommonTags =  1 %}
                                    {% assign maxRelatedCounter = 0 %}
                                        
                                    {% for relatedPost in site.posts %}

                                        {% assign sameTagCount = 0 %}
                                        {% assign commonTags = '' %}

                                        {% for tag in relatedPost.tags %}
                                            {% if relatedPost.url != post.url %}
                                                {% if post.tags contains tag %}
                                                    {% assign sameTagCount = sameTagCount | plus: 1 %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}

                                        {% if sameTagCount >= minCommonTags %}
                                            <li>
                                                <a href="{{ site.url }}{{ relatedPost.url }}">{{ relatedPost.title }}</a>
                                            </li>
                                            {% assign maxRelatedCounter = maxRelatedCounter | plus: 1 %}
                                            {% if maxRelatedCounter >= maxRelated %}
                                                {% break %}
                                            {% endif %}
                                        {% endif %}

                                    {% endfor %}
                                    </ul>
                                </footer>
                            </article>
                        </body>
                    </html>
                    ]]>
                </content:encoded>
            </item>
        {% endunless %}
    {% endfor %}
  </channel>
</rss>